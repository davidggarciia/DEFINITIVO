<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/imagen_ejemplo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="TÃ­tulo del producto" />

        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Precio: \$10.00" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRestar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-" />

            <TextView
                android:id="@+id/textViewCantidad"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/fondo_cantidad"
                android:text="1" />

            <Button
                android:id="@+id/buttonSumar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="+" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
