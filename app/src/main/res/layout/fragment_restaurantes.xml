<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/borde_redondo">

    <ImageView
        android:id="@+id/imagenHamburguesa"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:src="@drawable/imagen_hamburguesa"
        android:contentDescription="@string/imagen_hamburguesa" />

    <LinearLayout
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:translationY="20dp">

        <TextView
            android:id="@+id/nombreHamburguesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebas_neue"
            android:gravity="center_vertical"
            android:text="Hamburguesa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/precioHamburguesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebas_neue"
            android:text="9,90â‚¬"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iconoFavorito"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icono_favorito"
        android:contentDescription="@string/icono_favorito"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/iconoCarrito"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icono_carrito"
        android:contentDescription="@string/icono_carrito"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp" />

</LinearLayout>
